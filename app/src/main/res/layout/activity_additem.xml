<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_pattern"
    tools:context=".AddItemActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <EditText
            android:autofillHints="@string/hint_fill"
            android:id="@+id/name"
            android:background="@null"
            android:inputType="textPersonName"
            android:hint="@string/hint_fill"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:autofillHints="@string/zero"
            android:id="@+id/price"
            android:background="@null"
            android:inputType="number"
            android:hint="@string/zero"
            android:gravity="end"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/rub"
            android:layout_marginEnd="8dp"
            android:text="@string/def_simbol"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:contentDescription="@string/def_simbol"
            android:id="@+id/add_button"
            android:layout_marginEnd="22dp"
            android:background="@null"
            android:src="@drawable/ic_test_add"
            android:layout_width="26dp"
            android:layout_height="26dp"/>

    </LinearLayout>

</LinearLayout>